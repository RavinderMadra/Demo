<table class="table table-bordered table-hover" id="tblmaintainance">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th >Product Name</th>
            <th>StoreName</th>
            <th>Purchase Date</th>
            <th  class="text-center noExl">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DemoModel.ViewModel.SaleViewModel entity in Model)
        {  
            <tr>
                <td>@entity.CustomerName</td>
                <td>@entity.ProductName</td>
                <td>@entity.StoreName</td>
                <td>@entity.DateSold.ToString("dd/MM/yy")</td>
                <td class="text-center noExl"><a class="btn btn-success" onclick="return getbyID(@entity.Id)"><i class="fa fa-edit" ></i> Edit</a> 
                &nbsp;&nbsp; <a  class="btn btn-danger" onclick="Delete(@entity.Id)"><i class="fa fa-trash"></i>Delete</a></td>
            </tr>
        }
    </tbody>

</table>
